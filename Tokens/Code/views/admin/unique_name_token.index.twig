

<html>
    <link rel="stylesheet" type="text/css" href="{{ web_root }}assets/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="{{ web_root }}assets/css/font-awesome.css"/>
    <link rel="stylesheet" type="text/css" href="{{ web_root }}themes/backend/adminlte/css/AdminLTE.css"/>
    <div class="col-xs-12 all-tokens">
        {% for token in tokens %}
            <div class="col-xs-4">
                <div class="single-token">
                    <center>
                        <img src="{{ web_root }}themes/frontend/wonderful/assets/images/logo.png">

                        <div style="clear:both;"></div>


                        <b> 
                            Token Code for {{ token.amount }}
                            <small>KES</small>
                        </b>
                    </center>

                    <h3>
                        {{ token.token }}
                    </h3>

                    <small> 
                        <ol>
                            <li>Tokens are only provided by sbc office.</li> 
                            <li>Do not share this Token</li>
                        </ol>
                    </small>
                </div>
            </div>
        {% endfor %}
    </div>
</html>

<style>
    .col-xs-4{
        padding:0;
        margin: 0;
    }
    .all-tokens{
        background: #ECF0F5;
    }

    .single-token{
        border:1px #999 solid;
        background: white;
    }

    .single-token img{
        width: 80%;
    }

    .single-token b{
        text-align: center !important;
        font-size:12px;
    }
    .single-token b small{
        font-size: 8px; 
    }
    .single-token h3{
        padding: 0;
        margin:5px 0;
        text-align: center;
        font-size:20px;
    }
    .single-token ol{
        margin:0;
        padding:5px 10px ;
        font-size:8px;
    }
</style>
